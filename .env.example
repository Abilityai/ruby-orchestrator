# Ruby Orchestrator Environment Variables
# Copy this file to .env and fill in your credentials

# =============================================================================
# BLOTATO API - Multi-platform posting
# =============================================================================
BLOTATO_API_KEY=your-blotato-api-key
BLOTATO_BASE_URL=https://backend.blotato.com

# Platform Account IDs (from Blotato dashboard)
BLOTATO_YOUTUBE_ID=8598
BLOTATO_INSTAGRAM_ID=9987
BLOTATO_LINKEDIN_ID=4180
BLOTATO_TWITTER_ID=4790
BLOTATO_THREADS_ID=3435
BLOTATO_TIKTOK_ID=21395

# =============================================================================
# GOFILE - Temporary media hosting
# =============================================================================
GOFILE_API_TOKEN=your-gofile-api-token
GOFILE_ACCOUNT_ID=your-gofile-account-id
GOFILE_ROOT_FOLDER=your-gofile-root-folder-id

# =============================================================================
# METRICOOL - Analytics (for MCP server)
# =============================================================================
METRICOOL_USER_TOKEN=your-metricool-user-token
METRICOOL_USER_ID=your-metricool-user-id
